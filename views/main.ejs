<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <title>IBM Engagement</title>
</head>

<body>

  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand">IBM University Engagement</a>
    </div>
  </nav>

  <!-- FORM -->

  <div class="container">
    <div class="row">
      <div class="col">
        <form method="POST" action="/submit-form">

          <div class="input-group mt-2 ms-2 w-100 ">
            <span class="input-group-text" id="basic-addon3">Twitter query: </span>
            <input type="text" class="form-control" id="basic-url" name="query" aria-describedby="basic-addon3">
            <input type="submit" class="btn btn-primary">

          </div>

        </form>

        <div id="tweet_container" class="w-100 ms-2 mt-2" style="overflow-y:scroll; height:800px;">
          <div id="tweet" style="max-width: 80%; margin:auto"> </div>
        </div>
      </div>
      <div class="col">
        <div class="dropdown mt-2">
          <button class="btn btn-secondary dropdown-toggle w-100" type="button" id="dropdownMenuButton1"
            data-bs-toggle="dropdown" aria-expanded="false">
            Accounts
          </button>
          <ul class="dropdown-menu w-100" aria-labelledby="dropdownMenuButton1">
            <% for (var i=0; i < accounts.length-2; i+=3) { %>
              <div class="row row-cols-2 row-cols-lg-3 g-2 g-lg-3">
                <div class="col">
                  <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
                    <label class="form-check-label" for="flexSwitchCheckChecked"> <%= accounts[i] %>
                    </label>
                  </div>
                </div>
                <div class="col">
                  <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
                    <label class="form-check-label" for="flexSwitchCheckChecked"><%= accounts[i+1] %></label>
                  </div>
                </div>
                <div class="col">
                  <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
                    <label class="form-check-label" for="flexSwitchCheckChecked"><%= accounts[i+2] %></label>
                  </div>
                </div>      
              </div>
              <% } %>




          </ul>
        </div>

        <div class="input-group mb-2 mt-2">
          <span class="input-group-text" id="basic-addon1">Keyword/Topic</span>
          <input type="text" class="form-control" placeholder="e.g. 'Career' / leave blank for all"
            aria-label="Username" aria-describedby="basic-addon1">
        </div>

        <div class="row row-cols-2 row-cols-lg-3 g-2 g-lg-3">
          <div class="col">
            <div class="form-check form-switch">
              <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
              <label class="form-check-label" for="flexSwitchCheckChecked">Include Retweets</label>
            </div>
          </div>
          <div class="col">
            <div class="form-check form-switch">
              <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
              <label class="form-check-label" for="flexSwitchCheckChecked">Include Replies</label>
            </div>
          </div>
          <div class="col">
            <div class="form-check form-switch">
              <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
              <label class="form-check-label" for="flexSwitchCheckChecked">Include Mentions</label>
            </div>
          </div>
          <button type="button" class="btn btn-primary ms-2">Submit</button>

        </div>


      </div>
    </div>
  </div>



  <!-- FORM END -->

  <!-- broserify - for twitter widgets -->
  <script src="../bundle.js"></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

</body>

</html>