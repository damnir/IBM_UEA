<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>IBM Engagement</title>

    <style>
        /* Rounded border */
        hr.rounded {
            border-top: 8px solid #bbb;
            border-radius: 5px;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">IBM University Engagement Analysis</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/records">Records</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">New Query</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="mt-4 w-100 ms-5">
        <div class="row w-100">
            <div class="col-2">

                <h3 class=" ">Records:</h3>

                <div class="list-group mt-2">

                    <% for (var i=0; i < recs.length; i+=1) { %>

                        <a href="/records/<%=  recs[i]['_id']%> " class="list-group-item list-group-item-action">
                            <%= recs[i]['_id'] %>
                        </a>

                        <% } %>
                </div>
                <!-- 
                    <% if(query!=null) { for (var i=0; i < query['result']['results'].length; i+=1) {%>
                        <h1>
                            <%= query['result']['results'][i]['t_id'] %>
                        </h1>
                        <% }} %> -->

            </div>
            <% if(id !=null) { %>
                <div class="col-3">
                    <h3>Query Feeed</h3>
                    <div id="tweet_container" class="w-100 ms-2 mt-2" style="overflow-y:scroll; height:800px;">
                        <div id="tweet" style="max-width: 95%; margin:auto"> </div>
                    </div>
                    <script src="../bundle.js"></script>

                    <script>bundle.load("records/")</script>
                </div>

                <div class="col-3">

                    <div class="row" style="height: 46.5%;">

                        <h2>Analysis Summary</h2>


                        <h3>Sentiment:</h3>

                        <div>
                            <h5>Positive: <%= Math.round(query['summary']['sentiment']['positive'] * 100 /
                                    query['result']['matching_results'])%>%
                                    | Neutral: <%= Math.round(query['summary']['sentiment']['neutral'] * 100 /
                                        query['result']['matching_results'])%>%
                                        | Negative: <%= Math.round(query['summary']['sentiment']['negative'] * 100 /
                                            query['result']['matching_results'])%>%</h5>
                        </div>
                        <div style="width: 450px; height: 280px; position: relative;">
                            <canvas id="myChart"></canvas>
                        </div>

                    </div>
                    <hr class="rounded">

                    <div class="row" style="height: 43.8%;">

                        <h3>Top Categories:</h3>

                        <div style="width: 450px; height: 310px; position: relative;">
                            <canvas id="categoryChart"></canvas>
                        </div>

                    </div>

                    <button type="button" class="btn btn-success mt-3 w-100">Export to Google Sheets</button>


                </div>

                <div class="col-3  mt-5">

                    <div class="row" style="height: 43.25%;">
                        <h3>Entities:</h3>
                        <div id='my_canvas' class="canvas"
                            style="width: 450px; height: 300px; background-color: rgb(255, 224, 224); position: relative;">

                        </div>
                    </div>
                    <hr class="rounded">

                    <div class="row" style="height: 48.5%;">

                        <h3>Concepts:</h3>
                        <div id='my_canvas2' class="canvas mb-2 mt-1"
                            style="width: 450px; height: 300px; background-color: rgb(255, 224, 224); position: relative;">

                        </div>
                    </div>
                    <div class="row">
                        <button type="button" class="btn btn-warning w-100">Export to Google Slides</button>
                    </div>

                </div>

        </div>

        <script src="../wordcloud2.js"></script>

        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

        <script>
            const labels = [
                'Positive',
                'Neutral',
                'Negative'
            ];

            const data = {
                labels: labels,
                datasets: [{
                    label: 'My First dataset',
                    data: ["<%=query['summary']['sentiment']['positive']%>", "<%=query['summary']['sentiment']['neutral']%>",
                        "<%=query['summary']['sentiment']['negative']%>"],
                    backgroundColor: [
                        'rgb(80, 200, 130)',
                        'rgb(54, 162, 235)',
                        'rgb(255, 99, 132)'
                    ],
                    hoverOffset: 4
                }]
            };

            const config = {
                type: 'doughnut',
                data: data,
                options: {
                    maintainAspectRatio: false,
                }
            };
        </script>

        <script>
            const myChart = new Chart(
                document.getElementById('myChart'),
                config
            );
        </script>

        <script>
            const labels2 = [
                "<%= query['summary']['categories'][0][0]%>",
                "<%= query['summary']['categories'][1][0]%>",
                "<%= query['summary']['categories'][2][0]%>",
                "<%= query['summary']['categories'][3][0]%>",
                "<%= query['summary']['categories'][4][0]%>",
            ];

            const data2 = {
                labels: labels2,
                datasets: [{
                    label: 'My First dataset',
                    data: ["<%= query['summary']['categories'][0][1]%>",
                        "<%= query['summary']['categories'][1][1]%>",
                        "<%= query['summary']['categories'][2][1]%>",
                        "<%= query['summary']['categories'][3][1]%>",
                        "<%= query['summary']['categories'][4][1]%>",],
                    backgroundColor: [
                        'rgba(255, 99, 132)',
                        'rgba(255, 159, 64)',
                        'rgba(75, 192, 192)',
                        'rgba(54, 162, 235)',
                        'rgba(153, 102, 255)',
                    ],
                    hoverOffset: 4
                }]
            };

            const config2 = {
                type: 'doughnut',
                data: data2,
                options: {
                    maintainAspectRatio: false,
                }
            };
        </script>

        <script>
            const myChart2 = new Chart(
                document.getElementById('categoryChart'),
                config2
            );
        </script>


        <%}%>

            <% if (query!=null) { %>
                <script>

                    arr = "<%=entities%>".split(',')
                    const pairs = Array.from({ length: arr.length / 2 }, (_, i) => arr.slice(i * 2, i * 2 + 2))

                    WordCloud(document.getElementById('my_canvas'), { list: pairs, weightFactor: 1.3, shrinkToFit: true, drawOutOfBound: false });

                    console.log("<%=query['summary']['concepts']%>")

                    arr2 = "<%=query['summary']['concepts']%>".split(',')
                    const pairs2 = Array.from({ length: arr2.length / 2 }, (_, i) => arr2.slice(i * 2, i * 2 + 2))

                    WordCloud(document.getElementById('my_canvas2'), { list: pairs2, weightFactor: 1.3, shrinkToFit: true, drawOutOfBound: false });
                    console.log(pairs)
                </script>
                <% } %>

                    <script src="../bundle.js"></script>

                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
                        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
                        crossorigin="anonymous"></script>
</body>

</html>